<div class="row">
  <div class="well col-md-3 col-centered">
    <% if flash[:error]  %>
      <p class="alert alert-danger"><%= flash[:error] %></p>
    <% end %>
    <%= simple_form_for :session, url: sessions_path, defaults: { input_html: { class: 'form-control' } }  do |f| %>
  
      <%= f.input :email %>
      <%= f.input :password %>
  
      <%= f.button :submit, 'sign in', class: "btn-large btn-danger" %>
    <% end %>
  </div>
  <h1 class="text-center" style="margin-top: 40px;">Create quick, informal personas</h1>
</div>
